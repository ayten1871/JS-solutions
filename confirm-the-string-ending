function confirmEnding(str, target) {

  let string2letters=str.split(" ");
  let lastOne= string2letters.pop();
  let letterLength=target.length;
  let lastOneLetter=lastOne.substring(lastOne.length-letterLength);
  if (lastOneLetter==target){
    return true;
  }else {
    return false;
  }
  //console.log(letterLength);
 // console.log(lastOne.length-letterLength);
}

confirmEnding("Open sesame", "same");

