function findLongestWordLength(str) {
  let array=str.split(" ");
  let arrLength=[];
  let maxLength=0;
  for (let i=0;i<array.length;i++){
     let length=array[i].length;
     arrLength.push(length);
  }
 for (let j=0;j<arrLength.length;j++){ 
if(arrLength[j]>maxLength){
  maxLength=arrLength[j];
}
}
return maxLength;
}


